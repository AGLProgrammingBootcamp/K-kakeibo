<p id="notice"><%= notice %></p>

<h1>Listing Expenses</h1>

<table>
  <thead>
    <tr>
      <th>品目</th>
      <th>価格</th>
      <th>個数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.name %></td>
        <td><%= expense.cost %></td>
        <td><%= expense.kind %></td>
        <td><%= link_to '一覧に戻る', expense %></td>
        <td><%= link_to '編集', edit_expense_path(expense) %></td>
        <td><%= link_to '消去', expense, method: :delete, data: { confirm: '本当に消去してもいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_expense_path %>
